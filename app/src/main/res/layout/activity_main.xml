<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Controle IoT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" android:textColor="#F44336"
            app:layout_constraintHorizontal_bias="0.498" android:textSize="36sp"/>
    <Button
            android:text="Controle de Iluminação"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/botaoIluminacao" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Sair"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/botaoSair" app:layout_constraintStart_toStartOf="@+id/botaoIluminacao"
            app:layout_constraintEnd_toEndOf="@+id/botaoIluminacao" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/botaoIluminacao" app:layout_constraintHorizontal_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>